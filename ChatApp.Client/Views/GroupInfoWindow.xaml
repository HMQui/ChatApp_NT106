<Window x:Class="ChatApp.Client.Views.GroupInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Client.Views"
        mc:Ignorable="d"
        Title="Group Information" Height="500" Width="400" 
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="8,6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#F8F8F8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Content="←" 
                    Width="30" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333333"
                    Click="BackButton_Click"/>
            
            <TextBlock Grid.Column="1"
                       Text="Group Information"
                       FontSize="20"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Foreground="#333333"/>
        </Grid>

        <!-- Group Info -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Margin="0,0,0,15"
                BorderThickness="1"
                BorderBrush="#E0E0E0">
            <StackPanel Margin="15">
                <TextBlock Text="Group Name" 
                           FontWeight="SemiBold" 
                           FontSize="14" 
                           Margin="0,0,0,8"
                           Foreground="#333333"/>
                <TextBox x:Name="GroupNameTextBox" 
                         Style="{StaticResource CustomTextBoxStyle}"/>
            </StackPanel>
        </Border>

        <!-- Members List -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                BorderThickness="1"
                BorderBrush="#E0E0E0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Members" 
                           FontWeight="SemiBold" 
                           FontSize="14" 
                           Margin="0,0,0,10"
                           Foreground="#333333"/>

                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="MembersList" 
                               Margin="0,5"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#F0F0F0"
                    BorderBrush="#E0E0E0"
                    Foreground="#333333"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Width="100" 
                    Height="35"
                    Background="#2196F3"
                    BorderBrush="#1976D2"
                    Foreground="White"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 