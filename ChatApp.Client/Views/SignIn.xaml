<Window x:Class="ChatApp.Client.Views.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Client.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="SignIn" 
        Height="550" 
        Width="400">
    
    <Window.Resources>
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Boolean Negation Converter -->
        <local:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
    </Window.Resources>
    <Grid>
        <Border Background="White">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Image Grid.Row="0" 
                       Source="pack://application:,,,/Assets/Images/Logo.png"
                       Width="60" 
                       Height="60"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="0,0,0,0"/>

                <!-- Chat App Text -->
                <TextBlock Grid.Row="1" 
                           Text="Zola" 
                           Foreground="#1A3C34"
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>

                <!-- Sign In Header -->
                <TextBlock Grid.Row="2" 
                           Text="Welcome Back!" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30" 
                           Foreground="#1A3C34"/>

                <!-- Email Address -->
                <Border CornerRadius="8"
                        BorderThickness="2"
                        BorderBrush="#CCCCCC"
                        Background="White"
                        Margin="0,0,0,15"
                        Grid.Row="3">
                    <Grid>
                        <!-- Placeholder (icon + text) -->
                        <StackPanel x:Name="PlaceholderPanel"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    IsHitTestVisible="False"
                                    Visibility="Visible"
                    Panel.ZIndex="1">
                            <Image Source="pack://application:,,,/Assets/Images/mail.png"
                                   Width="14" Height="14"
                                   Margin="0,0,5,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Email Address"
                                       Foreground="#AAAAAA"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Email TextBox -->
                        <TextBox 
                                 Padding="15,10,10,10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Panel.ZIndex="2"
                                 Name="EmailTextBox"
                                 />
                    </Grid>
                </Border>


                <!-- Password Container -->
                <Border CornerRadius="8"
        BorderThickness="2"
        BorderBrush="#CCCCCC"
        Background="White"
        Margin="0,0,0,15"
        Grid.Row="4">
                    <Grid>
                        <!-- Placeholder (icon + text) -->
                        <StackPanel x:Name="PasswordPlaceholderPanel"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"
                    IsHitTestVisible="False"
                    Visibility="Visible"
                    Panel.ZIndex="1">
                            <Image Source="pack://application:,,,/Assets/Images/password.png"
                   Width="14" Height="14"
                   Margin="0,0,5,0"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="Password"
                       Foreground="#AAAAAA"
                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Password Box (Ẩn mật khẩu) -->
                        <PasswordBox x:Name="PasswordBoxControl"
                                     Padding="15,10,40,10"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     PasswordChanged="PasswordBoxControl_PasswordChanged"
                                     Panel.ZIndex="2" Password=""
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"/>

                        <!-- Text Box (Hiển thị mật khẩu) -->
                        <TextBox Name="PasswordTextBoxControl"
                 Padding="15,10,40,10"
                 Background="Transparent"
                 BorderThickness="0"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 Visibility="Collapsed"
                 TextChanged="PasswordTextBoxControl_TextChanged"
                 Panel.ZIndex="2"
                                 GotFocus="PasswordBox_GotFocus"
    LostFocus="PasswordBox_LostFocus"/>

                        <!-- Toggle Button để hiển thị/ẩn mật khẩu -->
                        <Button x:Name="TogglePasswordButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Width="30" Height="30"
                Background="Transparent"
                BorderThickness="0"
                Margin="0,0,5,0"
                Panel.ZIndex="3"
                Click="TogglePasswordButton_Click">
                            <Image x:Name="EyeIcon"
                   Width="14" Height="14"
                   Source="pack://application:,,,/Assets/Icons/icons8-hide-30.png"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Button>
                    </Grid>
                </Border>


                <!-- Help Text -->
                <TextBlock Grid.Row="5" HorizontalAlignment="Left" FontSize="12" Margin="0,0,0,0">
                    <TextBlock.Inlines>
                        <Run Text="" Foreground="Red" Name="lbHelpText"/>
                    </TextBlock.Inlines>
                </TextBlock>

                <!-- Sign In Button -->
                <Button Grid.Row="6" 
                        Content="Sign In" 
                        Background="#1A3C34" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Padding="10" 
                        Margin="0,10,0,5" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Name="SignInBtn"
                        Click="click"
                        >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10" 
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Sign Up Button -->
                <Button Grid.Row="7" 
                Content="Sign Up" 
                Background="#1A3C34" 
                Foreground="White" 
                FontSize="16" 
                FontWeight="Bold" 
                Padding="10" 
                Margin="0,10,0,5" 
                BorderThickness="0"
                Cursor="Hand" Click="Button_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="10" 
                                        Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Forgot Password Link -->
                <TextBlock Grid.Row="8" 
                           HorizontalAlignment="Left" 
                           FontSize="14" 
                           Margin="0,0,0,0">
                    <TextBlock.Inlines>
                        <Hyperlink Foreground="#1A3C34" 
                                   TextDecorations="Underline"
                                   Click="ForgotPassword_Click"
                                   Name="ForgotPasswordLink">
                            Forgot password?
                        </Hyperlink>
                    </TextBlock.Inlines>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>