<Window x:Class="ChatApp.Client.Views.CallingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Client.Views"
        mc:Ignorable="d"
        Title="CallingDialog" Height="450" Width="800"
        Loaded="form_loading"
        Closing="form_closing"
        >
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Giai đoạn chờ bắt máy -->
            <TextBlock x:Name="txtCallingStatus" Text="Đang gọi..." FontSize="18" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtReceiver" FontSize="14" HorizontalAlignment="Center" />
            <ProgressBar x:Name="progressCalling" IsIndeterminate="True" Width="200" Height="10" Margin="10"/>
            <Button x:Name="btnCancel" Content="Huỷ cuộc gọi" Width="120" Margin="10" Click="Cancel_Click"/>

            <!-- Giai đoạn đã kết nối -->
            <TextBlock x:Name="txtCallDuration" FontSize="16" Margin="10" Visibility="Collapsed" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spInCall" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Visibility="Collapsed">
                <Button x:Name="btnToggleMic" Content="Tắt mic" Width="100" Margin="5" Click="ToggleMic_Click"/>
                <Button x:Name="btnEndCall" Content="Kết thúc" Width="100" Margin="5" Click="EndCall_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
