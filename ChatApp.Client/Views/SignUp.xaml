<Window x:Class="ChatApp.Client.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Client.Views"
        mc:Ignorable="d"
        Background="#1A3C34" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="SignUp" Height="550" Width="400">
    
    <Grid >
        <Border Background="White"
            CornerRadius="20"
            >
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Logo-->
                <Image Grid.Row="0" 
                   Source="C:\Users\OMEN\source\repos\ChatApp_NT106\ChatApp.Client\Assets\Images\Logo.png"
                   Width="60" Height="60"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Margin="0,0,0,0"/>

                <!-- Chat App Text -->
                <TextBlock Grid.Row="1" 
                       Text="Zola" 
                       Foreground="#1A3C34"
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
                <!-- Sign Up Header -->
                <TextBlock Grid.Row="2" 
                       Text="Sign Up" FontSize="32" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30" 
                       Foreground="#1A3C34"/>
                <!-- Username -->
                <TextBox Grid.Row="3" Margin="0,0,0,15" Padding="10,10" FontSize="14" BorderThickness="1" BorderBrush="#CCCCCC">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                                    <Image Source="pack://application:,,,/Assets/Images/user (1).png"
                                           Width="14"
                                           Height="14"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Margin="0,0,5,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <TextBlock Text="Username" 
                                               Foreground="#AAAAAA"
                                               VerticalAlignment="Center" 
                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="30,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Email Address -->
                <TextBox Grid.Row="4" Margin="0,0,0,15" Padding="10,10" FontSize="14" BorderThickness="1" BorderBrush="#CCCCCC">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                                    <Image Source="pack://application:,,,/Assets/Images/mail.png"
                                           Width="14"
                                           Height="14"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Margin="0,0,5,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <TextBlock Text="Email Address" 
                                               Foreground="#AAAAAA"
                                               VerticalAlignment="Center" 
                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="29,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Password -->
                <PasswordBox Grid.Row="5" Margin="0,0,0,15" Padding="10,10" FontSize="14" BorderThickness="1" BorderBrush="#CCCCCC">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                                    <Image Source="pack://application:,,,/Assets/Images/password.png"
                                           Width="14"
                                           Height="14"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Margin="0,0,5,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Password, RelativeSource={RelativeSource AncestorType=PasswordBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <TextBlock Text="Password" 
                                               Foreground="#AAAAAA"
                                               VerticalAlignment="Center" 
                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Password, RelativeSource={RelativeSource AncestorType=PasswordBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="29,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Confirm Password -->
                <PasswordBox Grid.Row="6" Margin="0,0,0,15" Padding="10,10" FontSize="14" BorderThickness="1" BorderBrush="#CCCCCC">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                                    <Image Source="pack://application:,,,/Assets/Images/password.png"
                                           Width="14"
                                           Height="14"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Margin="0,0,5,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Password, RelativeSource={RelativeSource AncestorType=PasswordBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <TextBlock Text="Confirm Password" 
                                               Foreground="#AAAAAA"
                                               VerticalAlignment="Center" 
                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Password, RelativeSource={RelativeSource AncestorType=PasswordBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="29,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Sign Up Button -->
                <Button Grid.Row="7" Content="Sign Up" Background="#1A3C34" Foreground="White" FontSize="16" FontWeight="Bold" Padding="10" Margin="0,10,0,15" BorderThickness="0" >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Log In Link -->
                <TextBlock Grid.Row="8" HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,0">
                    <TextBlock.Inlines>
                        <Run Text="Already have an account? " Foreground="#666666"/>
                        <Hyperlink Foreground="#1A3C34" TextDecorations="None">Log in</Hyperlink>
                    </TextBlock.Inlines>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
