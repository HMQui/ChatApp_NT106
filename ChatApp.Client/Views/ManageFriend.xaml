<Window x:Class="ChatApp.Client.Views.ManageFriend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zola"
        Width="800" Height="500"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Loaded="form_load"
        Closing="form_closing">

    <Border Background="White" BorderBrush="#2E7D55" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="719*" />
                <ColumnDefinition Width="79*" />
            </Grid.ColumnDefinitions>

            <!-- Main Layout -->
            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel -->
                <StackPanel Grid.Column="0" Margin="20,20,10,20">

                    <!-- Trở về -->
                    <Button Content="← Trở về"
                            Width="100"
                            Height="30"
                            Margin="0,0,0,10"
                            Background="#2E7D55"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="BackButton_Click"/>

                    <!-- Tìm kiếm -->
                    <TextBlock Text="🔍 Tìm kiếm bạn bè"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#2E3A28"
                               Margin="0,10,0,5"/>
                    <Grid Height="35" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nút tìm -->
                        <Button Grid.Column="0" Width="35" Background="#2E7D55" BorderThickness="0" Padding="5" Click="FindFriendClick">
                            <Viewbox Stretch="Uniform">
                                <Path Data="M15.5,14H14.71l-0.43-0.43A6.974,6.974 0 0,0 16,7A7,7 0 1,0 7,14a6.974,6.974 0 0,0 6.57-4.28l0.43,0.43v0.79l5,4.99L20.49,19L15.5,14ZM7,12A5,5 0 1,1 12,7A5,5 0 0,1 7,12Z"
                                      Fill="White"/>
                            </Viewbox>
                        </Button>

                        <!-- Ô nhập -->
                        <TextBox Grid.Column="1" Height="35" Padding="10,5" FontSize="14"
                                 BorderBrush="#CCC" BorderThickness="1" Name="FindFriendEmail"
                                 VerticalContentAlignment="Center" />
                    </Grid>

                    <!-- Kết quả tìm kiếm -->
                    <TextBlock Text="📋 Kết quả tìm kiếm" FontSize="14" FontWeight="Bold" Foreground="#2E3A28" Margin="0,5,0,5"/>
                    <Separator Margin="0,0,0,10" />
                    <StackPanel x:Name="NewFriends" />
                </StackPanel>

                <!-- Right Panel -->
                <StackPanel Grid.Column="1" Margin="10,20,20,20">
                    <!-- Danh sách bạn bè -->
                    <TextBlock Text="👥 Danh sách bạn bè" FontSize="20" FontWeight="Bold" Foreground="#2E3A28" Margin="0,0,0,5"/>
                    <Separator Margin="0,0,0,10"/>
                    <StackPanel x:Name="ListFriend" />

                    <!-- Lời mời kết bạn -->
                    <TextBlock Text="📨 Lời mời kết bạn" FontSize="16" FontWeight="Bold" Foreground="#2E3A28" Margin="0,20,0,5"/>
                    <Separator Margin="0,0,0,10"/>
                    <StackPanel x:Name="FriendRequest" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
